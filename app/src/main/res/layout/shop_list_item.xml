<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/drawer_main"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/shop_list_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/shop_list_mix" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        >
        <TextView
            android:id="@+id/shop_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:text="小米概念机"/>
        <TextView
            android:id="@+id/shop_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textColor="#ffffff"
            android:text="全面屏 陶瓷机身 超声波距离传感器"/>
        <TextView
            android:id="@+id/shop_list_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textSize="22sp"
            android:textColor="@color/colorAccent"
            android:text="￥3999"/>
    </LinearLayout>

</LinearLayout>
